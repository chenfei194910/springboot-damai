<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="error" strict="true"
	name="LogConfig">
	<Properties>
		<Property name="filepath">f:/logs</Property>
	</Properties>
	<Appenders>
		<!-- ConsoleAppender -->
		<!-- name Appender名称 -->
		<!-- target 枚举型(SYSTEM_OUT, SYSTEM_ERR). 默认 SYSTEM_OUT -->
		<Console name="STDOUT" target="SYSTEM_OUT">
			<PatternLayout>
				<Pattern>[%d] - [%c] - [%highlight{%level}] - [%method] - [%t] -
					%msg%n</Pattern>
			</PatternLayout>
		</Console>
	</Appenders>
	<Loggers>
		<Logger name="fileLogger" level="debug" additivity="false">
			<AppenderRef ref="STDOUT" />
		</Logger>

		<Root level="ERROR">
			<AppenderRef ref="Console" />
		</Root>
	</Loggers>

</Configuration>